{
  "manifest_version": 3,
  "name": "Auto Form Recovery",
  "version": "1.0.0",
  "description": "Automatically save and restore form input on a perâ€‘form basis to prevent data loss.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Auto Form Recovery",
    "default_popup": "popup.html"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "sc5ksystems@gmail.com",
      "strict_min_version": "109.0"
    }
  }
}